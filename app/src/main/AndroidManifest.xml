<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.zhuangweiming.nusbus">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BusApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.MapVisualizationActivity">

        </activity>
        <receiver
            android:name=".services.AlarmReceiver">
        </receiver>
        <service
            android:name=".services.BusDownloadIntentService"
            android:exported="false"></service>
        <activity android:name=".view.ShuttleActivity"></activity>
    </application>

</manifest>